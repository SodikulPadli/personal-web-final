<html>

  <head>
    <title>Login Page</title>
    <link href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous' />
    <link href='public/style.css' rel='stylesheet' />
  </head>

  <body>

    <!-- Navbar -->
    <nav class='navbar navbar-expand-lg navbar-light bg-light'>
      <div class='container'>
        <a class='navbar-brand' href='/home'>
          <img src='/public/assets/logo.png' alt='' />
        </a>
        <button class='navbar-toggler' type='button' data-bs-toggle='collapse' data-bs-target='#navbarNavAltMarkup' aria-controls='navbarNavAltMarkup' aria-expanded='false' aria-label='Toggle navigation'>
          <span class='navbar-toggler-icon'></span>
        </button>
        <div class='collapse navbar-collapse' id='navbarNavAltMarkup'>
          <div class='navbar-nav'>
            <a class='nav-link ms-4' href='/home'>Home</a>
            {{#if isLogin}}
              <a class='nav-link ms-4' href='/add-project'>Add Project</a>
              <li class='nav-item'>
                <a class='nav-link active text-orange' aria-current='page'>Hallo {{user.nama}}</a>
              </li>
              <li class='nav-item'>
                <a class='nav-link active text-orange' aria-current='page' href='/logout'>Logout</a>
              </li>
            {{else}}
              <li class='nav-item'>
                <a class='nav-link active text-orange' aria-current='page' href='/register'>Register</a>
              </li>
              <li class='nav-item'>
                <a class='nav-link active ms-4 fw-bold' aria-current='page' href='/login'>Login</a>
              </li>
            {{/if}}
          </div>
        </div>
        <div class='d-flex flex-row-reverse'>
          <a class='btn btn-dark btn-sm px-3' href='/contact-me'>Contact Me</a>
        </div>
      </div>
    </nav>
    <!-- End Navbar -->

    {{#if messages.danger}}
      <div class='alert alert-danger' role='alert'>
        {{messages.danger}}
      </div>
    {{/if}}

    {{#if messages.success}}
      <div class='alert alert-success' role='alert'>
        {{messages.success}}
      </div>
    {{/if}}

    <!-- Form -->
    <div class='row bg-secondary bg-opacity-50'>
      <form class='row mx-auto my-3 w-50 px-5' action='/login' method='POST'>
        <div class='my-5'>
          <h3 class='text-center'>LOGIN TO YOUR ACCOUNT</h3>
        </div>
        <div class='mb-3 px-5'>
          <label for='email' class='form-label fw-bold'>Email</label>
          <input name='email' type='email' class='form-control' id='email' />
        </div>
        <div class='mb-3 px-5'>
          <label for='password' class='form-label fw-bold'>Password</label>
          <input name='password' type='password' class='form-control' id='password' />
        </div>
        <div class='d-md-flex justify-content-md-end px-5'>
          <button type='submit' class='btn btn-dark btn-md rounded-pill'>Submit</button>
        </div>
      </form>
    </div>
    <!-- End Form -->
  </body>

</html>