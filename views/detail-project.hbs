<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Detail Project</title>
    <!-- Bootstrap CSS -->
    <link href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous' />
    <link rel='stylesheet' href='https://pro.fontawesome.com/releases/v5.10.0/css/all.css' integrity='sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p' crossorigin='anonymous' />
  </head>
  <body>
    <!-- Navbar -->
    <nav class='navbar navbar-expand-lg navbar-light bg-light'>
      <div class='container'>
        <a class='navbar-brand' href='/home'>
          <img src='/public/assets/logo.png' alt='' />
        </a>
        <button class='navbar-toggler' type='button' data-bs-toggle='collapse' data-bs-target='#navbarNavAltMarkup' aria-controls='navbarNavAltMarkup' aria-expanded='false' aria-label='Toggle navigation'>
          <span class='navbar-toggler-icon'></span>
        </button>
        <div class='collapse navbar-collapse' id='navbarNavAltMarkup'>
          <div class='navbar-nav'>
            <a class='nav-link ms-4' href='/home'>Home</a>
            <a class='nav-link ms-4 fw-bold active' href='/project/{{this.id}}'>My Project</a>
          </div>
        </div>
        <div class='d-flex flex-row-reverse'>
          <a class='btn btn-dark btn-sm px-3' href='/contact-me'>Contact Me</a>
        </div>
      </div>
    </nav>
    <!-- akhir Navbar -->

    <!-- Detail Project -->
    <div class='row bg-secondary bg-opacity-50'>
      <div class='card my-5 w-75 mx-auto shadow-lg bg-body rounded-3'>
        <div class='row mb-5'>
          <div class='col'>
            <h1 class='text-center'>{{project.name}}</h1>
          </div>
        </div>
        <div class='row'>
          <div class='col-md-4 px-5'>
            <img src='/uploads/{{project.image}}' class='img-fluid rounded-3 shadow-lg' alt='...' />
          </div>
          <div class='col-md-8 position-relative'>
            <div class='card-body'>
              <h5 class='card-title mb-3'>Duration</h5>
              <img src='/public/assets/calendar.png' class='mb-2' style='max-width: 25px' />
              <p class='card-text d-inline'>{{project.start_date}} - {{project.end_date}}</p>
              <br />
              <img src='/public/assets/wall-clock.png' style='max-width: 25px' />
              <p class='card-text d-inline'>1 month ago</p>
              <!-- akhir duration -->

              <!-- awal tekhnologies -->
              <h5 class='card-title mt-3 mb-3'>Technologies</h5>
              <ul>
                <li>
                  <p class='card-text d-inline me-2'>{{project.technologies}}</p>
                </li>
              </ul>

            </div>
          </div>
        </div>
        <div class='row mt-5 px-5'>
          <div class='col'>
            <p>
              {{project.description}}
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- akhir Detail Project -->
    <script src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js' integrity='sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p' crossorigin='anonymous'></script>
  </body>
</html>